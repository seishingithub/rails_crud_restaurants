<%= form_for @restaurant do |f| %>
  <p>
    <%= f.label :restaurant_name %>
    <%= f.text_field :restaurant_name %>
  </p>
  <p>
    <%= f.label :food_type %>
    <%= f.text_field :food_type %>
  </p>
  <p>
    <%= f.submit 'Create a restaurant' %>
  </p>
<% end %>

<% @restaurants.each do |restaurant| %>
<ul>
  <li>
  <%= link_to "#{restaurant.restaurant_name}", restaurant_path(restaurant) %>, <%= restaurant.food_type %>
  </li>
</ul>
<% end %>

